@model FinalProject.Models.TransactionDetail

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TransactionDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!-- Authorization tags for "employee" and "manager" roles -->
        @{
            if (User.IsInRole("employee") || User.IsInRole("manager"))
            {
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TransactionNumber" class="control-label"></label>
                        <input asp-for="TransactionNumber" class="form-control" />
                        <span asp-validation-for="TransactionNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Seat" class="control-label"></label>
                        <input asp-for="Seat" class="form-control" />
                        <span asp-validation-for="Seat" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PaymentMethod" class="control-label"></label>
                        <select asp-for="PaymentMethod" class="form-control"></select>
                        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            }
            else
            {
                <p>You do not have permission to create a transaction detail.</p>
            }
        }
        <!-- End of Authorization tags -->
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
