@model FinalProject.Models.Transaction

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <!-- Authorization tags for "manager" role -->
    @if (User.IsInRole("manager"))
    {
        <h4>Transaction</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TransactionNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TransactionNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TransactionDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TransactionDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TransactionStatus)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TransactionStatus)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GiftTicket)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GiftTicket)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Recipient)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Recipient)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="TransactionID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    }
    else
    {
        <p>You do not have permission to delete transactions.</p>
    }
    <!-- End of Authorization tags -->
</div>
